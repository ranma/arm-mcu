PROGRAM test_usbhid;

VAR
  LED      : sbit AT GPIOB_ODR.B5;
  cnt      : byte;
  readbuf  : string[65];
  writebuf : string[65];

BEGIN

  { Initialize USB HID library }

  HID_Enable(@readbuf, @writebuf);

  { WORKAROUND: The FEZ Cerb40 doesn't have PA9 connected to VBUS!       }
  { We have to force PA9 high by making it an output and setting it high }

  GPIO_Digital_Output(@GPIOA_BASE, _GPIO_PINMASK_9);
  GPIOA_ODR.B9 := 1;

  { Configure LED outputs }

  GPIO_Digital_Output(@GPIOB_BASE, _GPIO_PINMASK_5);

  { Initialize LED outputs }

  LED := false;

  { Event loop }
 
  WHILE TRUE DO
    BEGIN
      USB_Polling_Proc();

      { Check for message from host }

      IF (HID_Read() <> 0) THEN
        BEGIN
          IF strncmp(readbuf, 'LEDON', 5) = 0 THEN
            LED := true;

          IF strncmp(readbuf, 'LEDOFF', 6) = 0 THEN
            LED := false;
        END
    END
END.
