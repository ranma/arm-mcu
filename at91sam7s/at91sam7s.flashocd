# Script arguments:
#   Binary flash image file
#   Flash write address
#   Text base address

set FILE [lindex $argv 0]
set FLASHADDR [lindex $argv 1]
set TEXTBASE [lindex $argv 2]
set ADDRESS [format 0x%08X [expr $FLASHADDR + $TEXTBASE]]
set prompt "> $"
set timeout 10

spawn /usr/bin/telnet localhost 4444
expect $prompt

send "soft_reset_halt\n"
expect $prompt

send "wait_halt\n"
expect $prompt

send "flash probe 0\n"
expect $prompt

send "flash protect 0 0 last off\n"
expect $prompt

send "flash write_image erase $FILE $ADDRESS bin\n"
expect -timeout 300 $prompt

send "flash protect 0 0 last on\n"
expect $prompt

send "resume\n"
expect $prompt

exp_sleep 1

send "shutdown\n"
expect $prompt

exp_sleep 1
