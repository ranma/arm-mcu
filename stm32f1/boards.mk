# Board specific macro definitions

ifeq ($(BOARDNAME), NUCLEO_F103RB)
MCU		= stm32f103rb
BOARDFLAGS	+= -DSTM32F103xB
BOARDFLAGS	+= -DBUTTON1_PIN=GPIOPIN45 -DBUTTON1_INPUT=GPIOPIN45IN -DBUTTON1_ACTIVELOW
BOARDFLAGS	+= -DLED1_PIN=GPIOPIN5 -DLED1_OUTPUT=GPIOPIN5OUT
CONSOLEFLAGS	?= -DCONSOLE_SERIAL -DCONSOLE_PORT='"com2:115200,n,8,1"'
OPENOCDIF	= stlink-v2-1
endif

ifeq ($(BOARDNAME), OLIMEX_STM32_P103)
MCU		= stm32f103rb
BOARDFLAGS	+= -DSTM32F103xB
BOARDFLAGS	+= -DBUTTON1_PIN=GPIOPIN0 -DBUTTON1_INPUT=GPIOPIN0IN
BOARDFLAGS	+= -DLED1_PIN=GPIOPIN44 -DLED1_OUTPUT=GPIOPIN44OUT -DLED1_ACTIVELOW
CONSOLEFLAGS	?= -DCONSOLE_SERIAL -DCONSOLE_PORT='"com2:115200,n,8,1"'
endif

ifeq ($(BOARDNAME), OLIMEX_STM32_P107)
MCU		= stm32f107rb
BOARDFLAGS	+= -DSTM32F107xC
BOARDFLAGS	+= -DBUTTON1_PIN=GPIOPIN0 -DBUTTON1_INPUT=GPIOPIN0IN
BOARDFLAGS	+= -DBUTTON2_PIN=GPIOPIN45 -DBUTTON2_INPUT=GPIOPIN45IN -DBUTTON2_ACTIVELOW
BOARDFLAGS	+= -DLED1_PIN=GPIOPIN38 -DLED1_OUTPUT=GPIOPIN38OUT
BOARDFLAGS	+= -DLED2_PIN=GPIOPIN39 -DLED2_OUTPUT=GPIOPIN39OUT
CONSOLEFLAGS	?= -DCONSOLE_SERIAL -DCONSOLE_PORT='"com3:115200,n,8,1"'
endif
